      <section class='foodList' id='1'>
        <h4>Movies and TV</h4>
        <% for (const task of tasks.filter(x => x.category_id === 1)) { %>
          <div>
            <div><h5>
              <%= task.title %>
            </h5></div>
            <div><%= task.description %></div>
          </div>
          <% } %>
      </section>

      <section class='moviesList' id='2'>
        <h4>Restaurants and Cafes</h4>
        <% for (const task of tasks.filter(x => x.category_id === 2)) { %>
          <div>
            <div><h5>
              <%= task.title %>
            </h5></div>
            <div><%= task.description %></div>
          </div>
          <% } %>
      </section>
    </div>

    <div class='taskLists-groupB'>
      <section class='booksList' id='3'>
        <h4>Books and Magazines</h4>
        <% for (const task of tasks.filter(x => x.category_id === 3)) { %>
          <div>
            <div><h5>
              <%= task.title %>
            </h5></div>
            <div><%= task.description %></div>
          </div>
          <% } %>
      </section>

      <section class='productsList' id='4'>
        <h4>Items and Produce</h4>
        <% for (const task of tasks.filter(x => x.category_id === 4)) { %>
          <div>
            <div><h5>
              <%= task.title %>
            </h5></div>
            <div><%= task.description %></div>
          </div>
          <% } %>
      </section>

    </div>
    <section class='uncategorizedList' id='5'>
      <h4>Uncategorized</h4>
      <% for (const task of tasks.filter(x => x.category_id === 5)) { %>
        <div>
          <div><h5>
            <%= task.title %>
          </h5></div>
          <div><%= task.description %></div>
        </div>
        <% } %>
    </section>
